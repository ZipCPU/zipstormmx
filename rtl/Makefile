.PHONY: all
all: cpudefs.h design.h verilated bin
#
#
TOPLVL=blackmx
JSON    := $(TOPLVL).json
ASCFILE := $(TOPLVL).asc
BINFILE := $(TOPLVL).bin
PCFFILE := $(TOPLVL).pcf
bin: $(BINFILE)
#
# Tools
CXX   := g++
ifeq ($(VERILATOR_ROOT),)
VERILATOR := verilator
else
VERILATOR := $(VERILATOR_ROOT)/bin/verilator
endif
YOSYS     := yosys
NEXTPNR   := nextpnr-ice40
#
#
YYMMDD=`date +%Y%m%d`
FBDIR := .
VDIRFB:= $(FBDIR)/obj_dir
SUBMAKE := $(MAKE) --no-print-directory --directory=$(VDIRFB) -f
include auto.mk
VFLAGS     = -MMD -Wall -trace -Mdir $(VDIRFB) $(AUTOVDIRS)  -cc
#
#

#
# Verilator build from the main level.  This is not the toplevel verilog
# file, but one beneath it, so as to allow the top level file to contain device
# specific logic and functions (PLLs, etc.).
#
#

.PHONY: verilated
verilated: $(VDIRFB)/Vmain__ALL.a

# $(VDIRFB)/V%.cpp: $(VDIRFB)/V%.h
# $(VDIRFB)/V%.mk:  $(VDIRFB)/V%.h
# $(VDIRFB)/V%.h: $(FBDIR)/%.v
#	$(VERILATOR) -O3 -Mdir $(VDIRFB) -trace -cc $(AUTOVDIRS) $*.v

$(VDIRFB)/Vmain.cpp: $(VDIRFB)/Vmain.h
$(VDIRFB)/Vmain.mk:  $(VDIRFB)/Vmain.h

$(VDIRFB)/Vmain.h: main.v $(VFLIST)
	$(VERILATOR) $(VFLAGS) main.v

cpudefs.h: cpu/cpudefs.v
	@echo "Building cpudefs.h"
	@echo "// " > $@
	@echo "// Do not edit this file, it is automatically generated!" >> $@
	@echo "// To generate this file, \"make cpudefs.h\" in the rtl directory." >> $@
	@echo "// " >> $@
	@echo >> $@
	@sed -e '{ s/^`/#/ }' $< | sed -e ' s/cpudefs.v/cpudefs.h/' >> $@
	@echo >> $@

design.h: main.v
	@echo "Building design.h"
	@echo "// " > $@
	@echo "// Do not edit this file, it is automatically generated!" >> $@
	@echo "// To generate this file, \"make design.h\" in the rtl directory." >> $@
	@echo "// " >> $@
	@echo "#ifndef DESIGN_H" >> $@
	@echo "#define DESIGN_H" >> $@
	@echo >> $@
	@grep "^\`" $< | grep -v default_nettype | grep -v include | sed -e '{ s/^`/#/ }' | sed -e ' s/main.v/design.h/' | grep -v timescale >> $@
	@echo >> $@
	@echo "#endif // DESIGN_H" >> $@

$(VDIRFB)/V%__ALL.a: $(VDIRFB)/V%.mk
	$(SUBMAKE) V$*.mk

#
#
#
$(JSON): toplevel.v $(VFLIST)
	@echo $(YOSYS) -ql yosys.log -p 'synth_ice40 -json $(JSON) -top toplevel' ...
	@$(YOSYS) -ql yosys.log -p 'synth_ice40 -json $(JSON) -top toplevel' $^

.PHONY: yosys
yosys: $(JSON)

DEVFLAGS := --hx8k --package tq144:4k
PNRFLAGS := --placer heap
$(ASCFILE): $(JSON) $(PCFFILE)
	$(NEXTPNR) $(DEVFLAGS) --freq 50 $(PNRFLAGS) --json $(JSON) --pcf $(PCFFILE) --asc $(ASCFILE) |& tee pnr.log
nextpnr: $(ASCFILE)

$(BINFILE): $(ASCFILE)
	icepack $(ASCFILE) $(BINFILE)
	icetime -d hx8k -c 50 $(ASCFILE)

.PHONY: load
load: $(BINFILE)
	stty -F /dev/ttyACM0 raw
	cat $(BINFILE) >/dev/ttyACM0


#
#
#
.PHONY: clean
clean:
	rm -rf $(VOBJ) cpudefs.h design.h
	rm -rf $(JSON) $(ASCFILE) $(BINFILE)
	rm -rf $(VDIRFB)/*.mk
	rm -rf $(VDIRFB)/*.cpp
	rm -rf $(VDIRFB)/*.h
	rm -rf $(VDIRFB)/

# yosys -p synth_ice40 -blif icozip.blif toplevel.v main.v wbubus/wbconsole.v wbubus/wbubus.v wbubus/wbucompactlines.v wbubus/wbucompress.v wbubus/wbuconsole.v wbubus/wbudecompress.v wbubus/wbudeword.v wbubus/wbuexec.v wbubus/wbufifo.v wbubus/wbuidleint.v wbubus/wbuinput.v wbubus/wbuoutput.v wbubus/wbureadcw.v wbubus/wbusixchar.v wbubus/wbutohex.v cpu/busdelay.v cpu/cpudefs.v cpu/cpuops.v cpu/dblfetch.v cpu/div.v cpu/icontrol.v cpu/idecode.v cpu/memops.v cpu/pfcache.v cpu/pipefetch.v cpu/pipemem.v cpu/prefetch.v cpu/wbarbiter.v cpu/wbdblpriarb.v cpu/wbdmac.v cpu/wbpriarbiter.v cpu/wbwatchdog.v cpu/zipbones.v cpu/zipcounter.v cpu/zipcpu.v cpu/zipjiffies.v cpu/zipsystem.v cpu/ziptimer.v ../pport/ppio.v ../pport/pport.v ../pport/wbpport.v memdev.v ufifo.v
